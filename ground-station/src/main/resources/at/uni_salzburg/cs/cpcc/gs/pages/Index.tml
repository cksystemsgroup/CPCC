<html t:type="layout" title="${message:groundStationIndex}"
	t:sidebarTitle="Framework Version"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
	xmlns:p="tapestry:parameter">

<div class="row">
	<div class="col-xs-6 col-md-3">
		<h4>
			<t:pagelink page="index">${message:device.tree.label}</t:pagelink>
		</h4>
		<div t:id="deviceTree"></div>
	</div>

	<div class="col-xs-12 col-md-9">
		<h4>${message:rvStateList}</h4>

		<t:zone t:id="zone3">
			<!--  t:mixins="ZoneRefresh" ZoneRefresh.period="5"  -->
			<table t:type="grid" t:source="getStateList()" t:add="rvName"
				t:row="stateString"
				t:reorder="rvName,connected,statusUpdateRunning,lastUpdate,statusString"
				class="table table-striped table-condensed topic-table">

				<p:rvNameCell>
					<a href="${stateString.RealVehicle.url}" target="_blank">${stateString.RealVehicle.Name}</a>
				</p:rvNameCell>

				<p:lastUpdateCell>
					<t:output t:format="${message:dateFormat}"
						t:value="stateString.LastUpdate" />
				</p:lastUpdateCell>

				<p:empty>
					<p>${message:noRealVehicleConnected}</p>
				</p:empty>
			</table>
		</t:zone>
	</div>
</div>

</html>
