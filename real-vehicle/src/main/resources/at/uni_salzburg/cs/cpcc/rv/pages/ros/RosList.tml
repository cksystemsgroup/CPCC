<html t:type="layout" title="${message:rosList}"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

    <p>${message:rosList}</p>
<!-- 
	<section id="buttons">
		<a t:type="pagelink" page="person/new" href="#" class="btn btn-primary">${message:createNewPerson}</a>
	</section>
-->
	 
	<section id="personList">
		<table t:type="grid" source="topicList" exclude="id" add="editActions" row="topicState" class="table table-striped table-condensed">
			
			<p:editActionsCell>
				<!--  <a t:type="pagelink" page="person/edit" context="person.id" href="#" class="btn btn-primary btn-small">${message:editPerson}</a>  -->
				<a t:type="eventlink" event="delete" context="topicState.name" href="#" class="btn btn-small">${message:deleteTopic}</a>
			</p:editActionsCell>
			
			<p:empty>
				<p>${message:noTopicFound}</p>
			</p:empty>
		</table>
	</section>

</html>
