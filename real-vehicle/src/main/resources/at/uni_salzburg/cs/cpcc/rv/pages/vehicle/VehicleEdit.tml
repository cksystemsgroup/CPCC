<html t:type="layout" title="${message:editVehicle}"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns:p="tapestry:parameter">

<section id="vehicleEdit">
	<form t:type="form" t:validate="vehicle" t:id="form">
		<t:errors />

		<div t:type="beaneditor" t:object="vehicle"
			t:exclude="id,uuid,state,continuation" t:reorder="name,code">

			<p:name>
				<t:label t:type="label" for="name" />
				<input t:type="TextField" t:id="name" t:class="span8"
					value="vehicle.name" t:validate="maxlength=36" size="30" />
			</p:name>

			<p:code>
				<t:label for="code" />
				<t:textarea t:id="code" rows="25" t:class="span8"
					t:value="vehicle.code" t:mixins="ace/Ace"
					parameters="{'mode':'javascript','theme':'eclipse','gutter':'true','softWrap':'off','keybindings':'vim','showPrintMargin':'false','useSoftTabs':'true','showInvisibles':'false'}" />
			</p:code>
		</div>

		<div class="form-actions">
			<input type="submit" t:type="submit" t:value="${message:btn.commit}"
				t:class="btn btn-primary" /> <a t:type="pagelink" t:page="vehicle"
				t:class="btn">${message:btn.cancel}</a>
		</div>
	</form>
</section>



</html>
