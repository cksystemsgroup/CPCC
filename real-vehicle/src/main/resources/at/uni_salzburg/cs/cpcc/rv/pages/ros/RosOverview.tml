<html t:type="layout" title="ROS Overview"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns:p="tapestry:parameter">

<br />


<section id="rosNodeGroupList">
	<h3>${message:rosNodeGroupList}</h3>
	<table t:type="grid" source="rosNodeGroupList"
		row="rosNodeGroupConfig"
		class="table table-striped table-condensed topic-table">



		<p:empty>
			<p>${message:noRosNodeGroupFound}</p>
		</p:empty>
	</table>
</section>


<section id="adapterList">
	<h3>${message:adapterList}</h3>
	<table t:type="grid" source="adapterList" exclude="rootTopic"
		add="nodeName,nodeState"
		row="adapterConfig"
		class="table table-striped table-condensed topic-table">

			<p:nodeNameCell>${adapterConfig.Adapter.DefaultNodeName}</p:nodeNameCell>
			<p:nodeStateCell>${adapterConfig.Adapter.State}</p:nodeStateCell>
			
		<p:empty>
			<p>${message:noAdapterFound}</p>
		</p:empty>
	</table>
</section>

</html>
