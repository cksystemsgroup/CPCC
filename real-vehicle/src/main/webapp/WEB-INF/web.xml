<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<display-name>real-vehicle Tapestry 5 Application</display-name>
	<context-param>
		<param-name>tapestry.app-package</param-name>
		<param-value>at.uni_salzburg.cs.cpcc.rv</param-value>
	</context-param>
	<context-param>
		<param-name>tapestry.development-modules</param-name>
		<param-value>
			at.uni_salzburg.cs.cpcc.rv.services.DevelopmentModule
		</param-value>
	</context-param>
	<context-param>
		<param-name>tapestry.qa-modules</param-name>
		<param-value>
			at.uni_salzburg.cs.cpcc.rv.services.QaModule
		</param-value>
	</context-param>
	<filter>
		<filter-name>app</filter-name>
		<filter-class>org.apache.tapestry5.TapestryFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>app</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<resource-ref>
		<description>My DataSource Reference</description>
		<res-ref-name>jdbc/RV</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>
