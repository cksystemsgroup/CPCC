<html t:type="layout" title="${message:rosNewDevice}"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
	xmlns:p="tapestry:parameter">

<!-- <section id="deviceNew"> -->
<t:Form t:validate="device" t:id="form">
	<t:Errors />

	<div class="form-group">
		<t:BeanEditor t:object="device" t:exclude="id" t:add="deviceTypeName"
			t:reorder="topicRoot,deviceTypeName,configuration">

			<p:topicRoot>
				<t:Label t:type="label" for="topicRoot" />
				<t:TextField t:id="topicRoot" t:value="device.topicRoot"
					t:validate="maxlength=100" />
			</p:topicRoot>

			<p:deviceTypeName>
				<t:Label t:type="label" for="deviceTypeName" />
				<t:Select t:type="select" t:id="deviceTypeName"
					t:model="deviceTypeNameSelectModel"
					t:encoder="deviceTypeNameEncoder" t:value="device.type" />
			</p:deviceTypeName>

			<p:configuration>
				<t:Label for="configuration" />
				<t:Textarea t:id="configuration" rows="5"
					t:value="device.configuration" />
			</p:configuration>
		</t:BeanEditor>
	</div>

	<div class="form-actions">
		<ul class="list-inline">
			<li><t:Submit t:type="submit" t:value="${message:btn.create}"
					t:class="btn btn-primary" /></li>
			<li><t:PageLink t:page="commons/configuration/edit"
					t:class="btn btn-default">${message:btn.cancel}</t:PageLink></li>
		</ul>
	</div>
</t:Form>
<!-- </section> -->

</html>
