<html t:type="layout" title="${message:taskOverview}" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
	xmlns:p="tapestry:parameter">

	<h4>${message:currentRunningTask}</h4>
	<t:Zone t:id="zone1" t:mixins="ZoneRefresh" ZoneRefresh.period="1">
		<t:Grid t:source="getCurrentActiveTaskList()" t:row="currentRunningTask" t:exclude="completed,lastInTaskGroup"
			t:reorder="creationTime,position,tolerance,distanceToTarget,sensors" t:add="position,sensors"
			class="table table-striped table-condensed topic-table">

			<p:positionCell>
				${currentRunningTask.getPosition().toString()}
			</p:positionCell>

			<p:creationTimeCell>
				<t:Output t:format="timeFormat" t:value="currentRunningTask?.creationTime" />
			</p:creationTimeCell>

			<p:toleranceCell>
				<t:Output t:format="distanceFormat" t:value="currentRunningTask?.tolerance" />
			</p:toleranceCell>

			<p:distanceToTargetCell>
				<t:Output t:format="distanceFormat" t:value="currentRunningTask?.distanceToTarget" />
			</p:distanceToTargetCell>

			<p:sensorsCell>
				<t:Output t:format="sensorFormat" t:value="currentRunningTask?.sensors" />
			</p:sensorsCell>

			<p:empty>
				<p>${message:noCurrentRunningTaskFound}</p>
			</p:empty>
		</t:Grid>


		<h4>${message:scheduledTaskList}</h4>
		<t:Grid t:source="tes.getScheduledTasks()" t:row="scheduledTask" t:exclude="completed,lastInTaskGroup"
			t:reorder="creationTime,position,tolerance,sensors" t:add="position,sensors" class="table table-striped table-condensed topic-table">

			<p:positionCell>
				${scheduledTask.position.toString()}
			</p:positionCell>

			<p:creationTimeCell>
				<t:Output t:format="message:dateFormat" t:value="scheduledTask.creationTime" />
			</p:creationTimeCell>

			<p:lastInTaskGroupCell>
				${scheduledTask.lastInTaskGroup}
			</p:lastInTaskGroupCell>

			<p:sensorsCell>
				<t:Output t:id="sensors1" t:format="sensorFormat" t:value="scheduledTask?.sensors" />
			</p:sensorsCell>

			<p:empty>
				<p>${message:noScheduledTaskFound}</p>
			</p:empty>
		</t:Grid>


		<h4>${message:pendingTaskList}</h4>
		<t:Grid t:source="tes.getPendingTasks()" t:row="pendingTask" t:exclude="completed,lastInTaskGroup"
			t:reorder="creationTime,position,tolerance,sensors" t:add="position,sensors" class="table table-striped table-condensed topic-table">

			<p:positionCell>
				${pendingTask.getPosition().toString()}
			</p:positionCell>

			<p:creationTimeCell>
				<t:Output t:format="timeFormat" t:value="pendingTask?.creationTime" />
			</p:creationTimeCell>

			<p:sensorsCell>
				<t:Output t:format="sensorFormat" t:value="pendingTask?.sensors" />
			</p:sensorsCell>

			<p:empty>
				<p>${message:noPendingTaskFound}</p>
			</p:empty>
		</t:Grid>
	</t:Zone>
</html>
