<html t:type="layout" title="${message:realVehicleOverview}"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
	xmlns:p="tapestry:parameter">

<!-- <div class="row"> -->
<!-- 	<div class="col-md-12"> -->
<t:PageLink t:page="commons/rv/new" href="#" class="btn btn-primary">${message:createNewRealVehicle}</t:PageLink>
<!-- 	</div> -->
<!-- </div> -->

<!-- <div class="row"> -->
<!-- 	<div class="col-md-12"> -->
<h4>${message:realVehicleOverview}</h4>

<t:Grid t:source="realVehicleList" t:row="realVehicle"
	t:exclude="areaOfOperation" t:add="actions"
	class="table table-striped table-condensed topic-table">

	<p:urlCell>
		<a href="${realVehicle.url}" target="_blank">${realVehicle.url}</a>
	</p:urlCell>

	<p:lastUpdateCell>
		<t:output t:format="message:dateFormat"
			t:value="realVehicle.lastUpdate" />
	</p:lastUpdateCell>

	<p:actionsCell>
		<ul class="list-inline">
			<li><t:PageLink t:page="commons/rv/edit"
					t:context="realVehicle.id" href="#"
					t:title="${message:editRealVehicle}">
					<span class="glyphicon glyphicon-pencil" />
				</t:PageLink></li>

			<li><t:PageLink t:page="commons/rv/editAreaOfOperations"
					t:context="realVehicle.id" href="#"
					t:title="${message:editRealVehicleAreaOfOperations}">
					<span class="glyphicon glyphicon-edit" />
				</t:PageLink></li>

			<t:if test="realVehicle.deleted">
				<li><t:EventLink t:event="activateRealVehicle"
						t:context="realVehicle.id" href="#"
						title="${message:activateRealVehicle}">
						<span class="glyphicon glyphicon-ok-circle" />
					</t:EventLink></li>
				<p:else>
					<li><t:EventLink t:event="deactivateRealVehicle"
							t:context="realVehicle.id" href="#"
							title="${message:deactivateRealVehicle}">
							<span class="glyphicon glyphicon-ban-circle" />
						</t:EventLink></li>
				</p:else>
			</t:if>
		</ul>
	</p:actionsCell>

	<p:empty>
		<p>${message:noRealVehicleFound}</p>
	</p:empty>
</t:Grid>
<!-- 	</div> -->
<!-- </div> -->

</html>
