<html t:type="layout" title="${message:sensorEdit}"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
	xmlns:p="tapestry:parameter">

<!-- <div class="row"> -->
<!-- 	<div class="col-md-12"> -->
<t:Form t:type="form" t:validate="sensor" t:id="form">
	<t:Errors />

	<div class="form-group">
		<t:BeanEditor t:object="sensor" t:exclude="id,lastUpdate,deleted"
			t:reorder="description,type,visibility,messageType,parameters">

			<p:description>
				<t:label t:for="description" />
				<t:TextField t:id="description" t:value="sensor.description"
					t:validate="maxlength=100" />
			</p:description>

			<p:type>
				<t:label t:for="type" />
				<t:Select t:id="type" t:value="sensor.type" />
			</p:type>

			<p:visibility>
				<t:label t:for="visibility" />
				<t:Select t:id="visibility" t:value="sensor.visibility" />
			</p:visibility>

			<p:messageType>
				<t:label t:for="messageType" />
				<t:TextField t:id="messageType" t:value="sensor.messageType"
					t:validate="maxlength=50" />
			</p:messageType>

			<p:parameters>
				<t:label t:for="parameters" />
				<t:Textarea t:id="parameters" rows="5" t:value="sensor.parameters" />
			</p:parameters>
		</t:BeanEditor>
	</div>

	<div class="form-actions">
		<ul class="list-inline">
			<li><t:Submit t:value="${message:btn.commit}"
					t:class="btn btn-primary" /></li>
			<li><t:PageLink t:page="commons/sensor/list"
					t:class="btn btn-default">${message:btn.cancel}</t:PageLink></li>
		</ul>
	</div>
</t:Form>
<!-- 	</div> -->
<!-- </div> -->

</html>
