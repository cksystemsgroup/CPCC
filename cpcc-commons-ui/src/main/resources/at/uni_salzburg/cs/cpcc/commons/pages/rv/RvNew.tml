<html t:type="layout" title="${message:realVehicleNew}"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
	xmlns:p="tapestry:parameter">

<!-- <div class="row"> -->
<!-- 	<div class="col-md-12"> -->
<t:Form t:validate="realVehicle" t:id="form">
	<t:Errors />

	<t:BeanEditor t:object="realVehicle"
		t:exclude="id,lastUpdate,areaOfOperation" t:reorder="name,type,url">

		<p:name>
			<t:Label for="name" />
			<t:TextField t:id="name" t:value="realVehicle.name"
				t:validate="maxlength=50" />
		</p:name>

		<p:type>
			<t:Label for="type" />
			<t:Select t:id="type" t:value="realVehicle.type" />
		</p:type>

		<p:url>
			<t:Label for="url" />
			<t:TextField t:id="url" t:value="realVehicle.url"
				t:validate="maxlength=255" />
		</p:url>

		<!--
				<p:areaOfOperation>
					<t:label for="areaOfOperation" />
					<t:textarea t:id="areaOfOperation" rows="5" t:class="span4" value="realVehicle.areaOfOperation" />
				</p:areaOfOperation>
				-->
	</t:BeanEditor>

	<div class="form-actions">
		<ul class="list-inline">
			<li><t:Submit t:type="submit" t:value="${message:btn.create}"
					t:class="btn btn-primary" /></li>
			<li><t:PageLink t:page="commons/rv/list"
					t:class="btn btn-default">${message:btn.cancel}</t:PageLink></li>
		</ul>
	</div>
</t:Form>
<!-- 	</div> -->
<!-- </div> -->

</html>
